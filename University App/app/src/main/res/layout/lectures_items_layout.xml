<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#004C4949"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mirror"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:elevation="16dp"
            android:background="@color/mirror"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/lecturetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DF0E0D0D"
                android:paddingStart="10dp"
                android:padding="2dp"
                android:text="Time: 10:30-12:30 AM"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lecturedate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#ED0A8BBD"
                android:gravity="start"
                android:padding="2dp"
                android:text="22 Monday, nov 2020"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/lecturefacultyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:padding="4dp"
                android:paddingStart="10dp"
                android:text="factulty:"

                android:textColor="@color/white"
                android:textAllCaps="true"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lecturetime" />

            <TextView
                android:id="@+id/lecturesbody"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="@color/white"
                android:gravity="start"
                android:paddingStart="10dp"
                android:padding="4dp"
                android:text="lecture hall room 1"
                android:textSize="13sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lecturefacultyname" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>