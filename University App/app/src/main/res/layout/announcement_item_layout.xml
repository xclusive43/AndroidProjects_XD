<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="16dp"
    android:background="#004C4949"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:elevation="10dp"
        android:backgroundTint="@color/mirror"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/mirror"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/examhead"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="#EEE4E4E4"
                android:gravity="center"
                android:padding="2dp"
                android:text="Placement"
                android:textAllCaps="true"
                android:textColor="#F31C1919"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/exammode"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/announcement_body"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="start"
                android:padding="5dp"
                android:text="@string/app_layout_co_app_layout_constraintbottom_totopof"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/examnextbtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/examhead" />

            <TextView
                android:id="@+id/exammode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EEE11616"
                android:gravity="center"
                android:padding="2dp"
                android:text="17 Nov, 2020"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/examnextbtn"
                android:layout_width="30dp"
                android:layout_height="0dp"
                android:src="@drawable/click_arraow_rigth"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/exammode" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>