<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="24dp"
      android:fontFamily="@font/black_ops_one"
      android:gravity="center"
      android:padding="10dp"
      android:text="Xclusive Calculator"
      android:textColor="@color/ripplebtn"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/bmibtn"
      app:layout_constraintEnd_toStartOf="@+id/bmibtn"
      app:layout_constraintTop_toTopOf="@+id/bmibtn" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/constraintLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2">

    <TextView
        android:id="@+id/toptextview"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:gravity="bottom"
        android:maxLines="1"
        android:padding="10dp"
        android:paddingEnd="25dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/textcolor"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currenttextview" />

    <TextView
        android:id="@+id/currenttextview"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="bottom"
        android:padding="10dp"
        android:paddingEnd="20dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:maxLines="1"
        android:textColor="@color/textcolor"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
  </androidx.constraintlayout.widget.ConstraintLayout>


  <LinearLayout
      android:id="@+id/linearLayout7"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/bracket1"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"

        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="("
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/bracket2"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text=")"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/ln"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:padding="5dp"
        android:text="1/x"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="18sp" />

    <Button

        android:id="@+id/ac"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:padding="3dp"
        android:text="AC"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/c"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:elevation="17dp"
        android:foreground="@drawable/ripple"
        android:padding="3dp"
        android:text="@string/backSpace"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/sin"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:padding="3dp"
        android:text="sin"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/cos"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:padding="3dp"
        android:text="cos"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/tan"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:padding="3dp"
        android:text="tan"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/log"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"

        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple2"
        android:padding="3dp"
        android:text="log"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />


  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/factorial"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"

        android:foreground="@drawable/ripple"
        android:text="x!"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/xsquare"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="x2"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/squareroot"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="√"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/divide"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple2"
        android:padding="3dp"
        android:text="÷"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/seven"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="7"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/eight"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="8"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/nine"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="9"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/multiplybtn"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple2"
        android:padding="3dp"
        android:text="x"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout4"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout5"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/four"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/five"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="5"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/six"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="6"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/substract"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple2"
        android:padding="3dp"
        android:text="-"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/linearLayout5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center_horizontal"
      app:layout_constraintBottom_toTopOf="@+id/zerobtn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent">

    <Button

        android:id="@+id/one"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="1"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/two"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="2"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button

        android:id="@+id/three"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple"
        android:text="3"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addbtn"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/buttonborder"
        android:backgroundTint="@color/buttonback"
        android:foreground="@drawable/ripple2"
        android:padding="3dp"
        android:text="+"
        android:textAllCaps="false"
        android:textColor="@color/textcolor"
        android:textSize="20sp" />

  </LinearLayout>

  <Button

      android:id="@+id/piebtn"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="@drawable/buttonborder"
      android:backgroundTint="@color/buttonback"
      android:foreground="@drawable/ripple"
      android:text="π"
      android:textAllCaps="false"
      android:textColor="@color/textcolor"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/zerobtn"
      app:layout_constraintStart_toStartOf="@+id/linearLayout5" />

  <Button

      android:id="@+id/dotbtn"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginEnd="15dp"

      android:background="@drawable/buttonborder"
      android:backgroundTint="@color/buttonback"
      android:foreground="@drawable/ripple"
      android:text="."
      android:textAllCaps="false"
      android:textColor="@color/textcolor"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="@+id/zerobtn"
      app:layout_constraintEnd_toStartOf="@+id/zerobtn" />

  <Button
      android:id="@+id/zerobtn"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginEnd="15dp"
      android:layout_marginBottom="24dp"
      android:background="@drawable/buttonborder"
      android:backgroundTint="@color/buttonback"
      android:foreground="@drawable/ripple"
      android:text="0"
      android:textAllCaps="false"
      android:textColor="@color/textcolor"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/equalbtn" />

  <Button
      android:id="@+id/equalbtn"
      style="@style/Base.Widget.AppCompat.Button.Borderless"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:background="@drawable/buttonborder"
      android:backgroundTint="@color/buttonback"
      android:foreground="@drawable/ripple2"
      android:text="="
      android:textAllCaps="false"
      android:textColor="@color/textcolor"
      android:textSize="20sp"
      app:layout_constraintBottom_toBottomOf="@+id/zerobtn"
      app:layout_constraintEnd_toEndOf="@+id/linearLayout5" />

  <Button
      android:id="@+id/bmibtn"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:background="@drawable/buttonborder"
      android:backgroundTint="@color/buttonback"
      android:foreground="@drawable/ripple"
      android:text="BMI"
      android:fontFamily="@font/black_ops_one"
      android:padding="3dp"
      android:textColor="@color/textcolor"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>